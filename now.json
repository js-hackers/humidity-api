{
  "version": 2,
  "name": "weather-api",
  "alias": "weather-api.js-hackers.now.sh",
  "scope": "js-hackers",
  "env": {
    "OPENWEATHER_API_KEY": "@openweather-api-key"
  },
  "routes": [
    {
      "src": "/current",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Cache-Control": "max-age=600"
      },
      "methods": ["GET"],
      "dest": "/api/current.ts"
    },
    {
      "src": "/forecast",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Cache-Control": "max-age=600"
      },
      "methods": ["GET"],
      "dest": "/api/forecast.ts"
    },
    {
      "src": "/weather",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Cache-Control": "max-age=600"
      },
      "methods": ["GET"],
      "dest": "/api/weather.ts"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/404.html"
    }
  ]
}
